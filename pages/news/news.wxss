/* pages/news/news.wxss */
page{
  background-color:#f4f4f4;
}
.itembox {
    padding: 30rpx 30rpx 30rpx;
    background-color:#fff;
    border-bottom:1rpx solid #DDD;
}

.item_imgbox {
    width: 226rrpx;
    height: 128rpx;
}

.item_imgbox .item_img {
    width: 226rpx;
    height: 128rpx;
}

.item_textbox {
    margin-left: 38rpx;
    width: 420rpx;
}

.item_title {
    font-size: 30rpx;
    color: #333;
    min-height: 80rpx;
    line-height: 40rpx;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.item_numbox {
    justify-content: flex-end;
    align-items: center;
    height: 28rpx;
    margin-top: 30rpx;
}

.item_num {
    font-size: 24rpx;
    color: #888;
    width: 96rpx;
    margin-left: 10rpx;
    text-align: left;
}

.item_msgimg {
    width: 24rpx;
    height: 22rpx;
}

.item_agrimg {
    width: 26rpx;
    height: 26rpx;
}