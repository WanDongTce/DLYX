/* pages/home/finance/allIncreaseAgentChart/allIncreaseAgentChart.wxss */
page {
    background: #f4f4f4;
    /* padding-top: 80rpx; */
}

.tab-left {
    position: fixed;
    top: 10rpx;
    z-index: 2;
    width: 100%;
}

.top_box {
    height: 58rpx;
    border: 1rpx solid #353852;
    border-radius: 10rpx;
    box-sizing: border-box;
    width: 342rpx;
    margin: 0 auto 14rpx;
}

.top_box_text {
    width: 50%;
    text-align: center;
    font-size: 30rpx;
    line-height: 60rpx;
}

.top_box_current {
    background-color: #353852;
    color: #fff;
}

.top_box_text:first-child.top_box_current {
    border-radius: 0 10rpx 10rpx 0;
}

.top_box_text:last-child.top_box_current {
    border-radius: 10rpx 0 0 10rpx;
}

.bill_title {
    background-color: #f7f7f7;
    font-size: 26rpx;
    height: 80rpx;
    line-height: 80rpx;
    padding: 0 30rpx;
    color: #333;
}

.ml30 {
    margin-left: 30rpx;
}

.item_box {
    justify-content: space-between;
    align-items: center;
    padding: 34rpx 0;
    width: 100%;
}

.item_box image {
    width: 62rpx;
    height: 62rpx;
    margin-right: 26rpx;
}

.item_money {
    font-size: 32rpx;
}

.item_money_green {
    color: #48b947;
}

.item_money_red {
    color: #f65452;
}

.item_content {
    font-size: 30rpx;
    color: #333;
}

.item_time {
    font-size: 24rpx;
    color: #999;
}

.del {
    background-color: #f65452;
    color: #fff;
    font-size: 34rpx;
    width: 160rpx;
    height: 100%;
    position: absolute;
    top: 0;
    right: -190rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

overflow-inherit {
    overflow: inherit;
}

view {
    overflow: visible;
}

.bill_itembox {
    margin: 0 30rpx;
    border-bottom: 1rpx solid #e1e1e1;
}

/*bill top  */

.bill_topbox {
    margin-bottom: 28rpx;
    align-items: center;
}

.bill_toptime {
    width: 144rpx;
    margin-left: 30rpx;
}

.bill_topprogress {
    width: 480rpx;
}

.bill_num {
    font-size: 26rpx;
    color: #333;
    line-height: 60rpx;
}

.picker {
    display: block;
}

.picker_text {
    font-size: 32rpx;
    color: #333;
    margin-left: 30rpx;
}

.arrow_img {
    width: 28rpx;
    height: 18rpx;
    margin-left: 10rpx;
    margin-right: 30rpx;
}

.date-box {
    width: 100%;
    height: 8vh;
    margin-bottom: 0rpx;
    display: flex;
    display: -webkit-flex;
    align-items: center;
    justify-content: center;
}

.date-icon {
    width: 20rpx;
    height: 24rpx;
}

.date-str {
    width: 30%;
    text-align: center;
    font-size: 30rpx;
    color: #333;
    padding: 0 2%;
}

.canvas {
    margin: 0 auto;
}

.chart_view2 {
    width: 80%;
    margin: 50rpx auto 0;
    font-size: 34rpx;
    line-height: 3em;
    color: #333;
    text-align: center;
    background: #f7f7f7;
    border-radius: 10rpx;
}

.chart_bottombox {
    max-width: 100%;
    padding: 0 24rpx;
    margin: 70rpx auto 0;
    align-items: center;
    justify-content: center;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
}

.tooltip {
    min-width: 10%;
    margin-right: 2%;
}

.tooltip:last-child {
    margin-right: 0;
}

.chart_color {
    margin: 0 auto;
    width: 20rpx;
    height: 20rpx;
    border-radius: 4rpx;
}

.chart_color_cy {
    background-color: #f7ae47;
}

.chart_color_jt {
    background-color: #3cb9b3;
}

.chart_color_gw {
    background-color: #fd5f5c;
}

.chart_color_yl {
    background-color: #c484e5;
}

.chart_color_qt {
    background-color: #79b0ff;
}

.chart_text {
    width: 100%;
    margin-top: 18rpx;
    font-size: 24rpx;
    color: #b3b3b3;
    text-align: center;
}
.padding0{
  padding:0;
}