.search_bigbox{
  position:fixed;
  top:0;
  background-color:#fff;
  width:100%;
  height:82rpx;
  z-index: 2;
}
.search_box{
  /* background-color:#efefef; */
  background-color:#efefef;
  border-radius:10rpx;
  height:58rpx;
  line-height:58rpx;
  width:690rpx;
  margin:12rpx auto;
  /* margin:12rpx 30rpx; */
  /* width:100%; */
}
.search_box image{
  width:28rpx;
  height:28rpx;
  /* float:right; */
  margin-left:23rpx;
  margin-top:15rpx;
  float:left;
}
.search_box input{
  float:left;
  font-size:26rpx;
  line-height:58rpx;
  height:58rpx;
