/*内容  */
.cardbox{
  background-color:#fff;
  margin:18rpx 30rpx 0;
  padding:43rpx 32rpx 35rpx;
  border-radius: 10rpx;
  position:relative;
}
.cardbox_top{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom:30rpx;
}
.card_money{
  font-weight: bold;
  font-size:40rpx;
  color:#e43440;
}
.cardbox_top_text1{
  font-size:30rpx;
  color: #333;

}
.cardbox_top_text2{
  display: inline-block;
  width:100rpx;
  height:38rpx;
  line-height: 38rpx;
  text-align: center;
  color:#fff;
  border-radius: 5rpx;
  margin-left:26rpx;
  font-size:24rpx;
}
.cardbox_green{
  background-color:#8bd926;
}
.cardbox_red{
  background-color:#ff6974;
}
.cardbox_orange{
  background-color:#ffba32;
}
.cardbox_bottom{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.cardbox_xlh{
  font-size:30rpx;
  color:#333;
}
.cardbox_fk{
  color:#348ee4;
  font-size:30rpx;
  line-height:30rpx;
}
.cardbox_fk image{
  width:21rpx;
  height:20rpx;
  vertical-align: middle;
}
.card_info{
  font-size:28rpx;
  color:#999;
  line-height:46rpx;
}
.cashback{
    width:141rpx;
    height:141rpx;
    position:absolute;
    right:10rpx;
    top:52rpx;
}